<div class="container">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
      <%= devise_error_messages! %>
      <h2 class="form-signin-heading">Cadastre-se</h2>
      <%= f.email_field :email, options = { :class => 'input-block-level validate', :placeholder => 'Email'} %>
      <%= f.password_field :password, options = { :class => 'input-block-level validate', :placeholder => 'Senha'} %>
      <%= f.password_field :password_confirmation, options = { :class => 'input-block-level validate', :placeholder => 'Confirmar Senha'} %>
      <%= f.submit "Cadastrar", options = { :class => 'btn btn-large btn-primary'} %>
      <br/>
      <br/>
      <%= render "devise/shared/links" %>
  <% end %>

</div> <!-- /container -->