<div class="container">

  <h2 class="header">Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <%= f.email_field :email, options = { :class => 'validate'} %>
        <%= f.label :email %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.password_field :password, options = { :class => 'validate'} %>
        <%= f.label :password %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.password_field :password_confirmation, options = { :class => 'validate'} %>
        <%= f.label :password_confirmation %>
      </div>
    </div>
    <div class="row">
      <%= f.submit "Sign up", options = { :class => 'btn'} %>
    </div>

  </form>
</div>

<% end %>

</div>

<%= render "devise/shared/links" %>
